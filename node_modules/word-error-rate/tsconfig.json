{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "es2016",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": false,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "rootDir": "src",
      "composite": true,
      "outDir": "dist",
      "declaration": true,
      "declarationMap": true
  },
  "include": [ "./src" ]
}
